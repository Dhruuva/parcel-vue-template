doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		title Market
		link(rel="icon" type="image/x-icon" href="favicon.ico")
		link(rel='stylesheet' href='./assets/main.css' type="text/css")
		script(type='module' src='./market.js')
	body
		div#app1
			my-header#mynav(active='3')
			section.flex-layout-one
				my-entry( color="green" title="Bigest market place for sport" iSIze="105" iCos="shopping-cart" fs="33px" )
				div.flex-parent
					div.card
						my-entry( color="gold" title="football" iSIze="55" iCos="ball-american-football" fs="18px" )
						div.flex-parent
							section.card.card-sub.text-gold
								h2.text-gold Purchasing quantity
								my-button.button-gold(count="2")
					div.card
						my-entry( color="orange" title="Volleyball" iSIze="55" iCos="ball-volleyball" fs="18px" )
						div.flex-parent
							section.card.card-sub.text-orange
								h2 Purchasing quantity
								my-button.button-orange(count="3")
					div.card
						my-entry( color="tomato" title="Tennis" iSIze="55" iCos="ball-tennis" fs="18px" )
						div.flex-parent
							section.card.card-sub.text-tomato
								h2 Purchasing quantity
								my-button.button-tomato( count="1")

		